{
    "compilerOptions": {
      "lib": [
          "DOM",
          "ES2017",
          "WebWorker"
      ],
      "target": "es2017",
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importsNotUsedAsValues": "error",
      "isolatedModules": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "types": [
          "node",
          "svelte"
      ],
    },
    "include": [
      "src/**/*",
      ],
    "exclude": [
      "public/*",
    ],
  }
